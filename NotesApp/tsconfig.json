{
  "compilerOptions": {
    "target": "es2018",
    "lib": ["es2018"],
    "jsx": "react-native",
    "strict": true,
    "allowJs": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/app/*"],
      "@features/*": ["src/features/*"],
      "@shared/*": ["src/shared/*"]
    },
    "types": ["jest", "react-native"],
    "typeRoots": ["./node_modules/@types", "src/shared/types"]
  },
  "include": [
    "App.tsx",
    "src/**/*",
    "src/shared/types/**/*",
    "nativewind-env.d.ts",
    "__mock__",
    "__mock__/react-native-safe-area-context.tsx",
    "__mock__/@react-native-masked-view"
  ]
}
